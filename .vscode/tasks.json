    "tasks": [
        {
            "label": "Install Hooks",
            "type": "shell",
            "command": ". scripts/venv.sh && pre-commit install -f --install-hooks",
            "problemMatcher": [],
            "runOptions": {
                "runOn": "folderOpen"
